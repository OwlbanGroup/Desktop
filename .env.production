# NVIDIA OSCAR-BROOME-REVENUE Production Environment Variables

# Flask Application Settings
FLASK_ENV=production
FLASK_APP=backend/app_server_enhanced.py
SECRET_KEY=prod-secret-key-change-this-in-production-2024
API_TOKEN=prod-api-token-secure-2024

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
TIMEOUT=30

# Database Configuration
DATABASE_URL=sqlite:///production.db
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/letsencrypt/live/api.oscarbroome.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/api.oscarbroome.com/privkey.pem
SSL_ENABLED=true

# CORS Configuration
CORS_ORIGINS=https://api.oscarbroome.com,https://dashboard.oscarbroome.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Monitoring Configuration
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true

# Rate Limiting
RATE_LIMIT_DEFAULT=200 per day, 50 per hour
RATE_LIMIT_STRICT=10 per minute

# JPMorgan API Configuration
JPMORGAN_API_KEY=your-jpmorgan-api-key
JPMORGAN_CLIENT_ID=your-jpmorgan-client-id
JPMORGAN_CLIENT_SECRET=your-jpmorgan-client-secret

# NVIDIA API Configuration
NVIDIA_API_KEY=your-nvidia-api-key
NVIDIA_CLIENT_ID=your-nvidia-client-id

# QuickBooks Configuration
QUICKBOOKS_CLIENT_ID=your-quickbooks-client-id
QUICKBOOKS_CLIENT_SECRET=your-quickbooks-client-secret
QUICKBOOKS_REFRESH_TOKEN=your-quickbooks-refresh-token

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30

# Security Configuration
SESSION_TIMEOUT=3600
JWT_SECRET_KEY=prod-jwt-secret-key-2024
ENCRYPTION_KEY=prod-encryption-key-32-chars-long

# External Service URLs
JPMORGAN_BASE_URL=https://api.jpmorgan.com
NVIDIA_BASE_URL=https://api.nvidia.com
QUICKBOOKS_BASE_URL=https://quickbooks.api.intuit.com

# Feature Flags
ENABLE_GPU_MONITORING=true
ENABLE_FINANCIAL_ANALYTICS=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_PUSH_NOTIFICATIONS=true

# Performance Tuning
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=10
REQUEST_TIMEOUT=30
